{
  "swagger": "2.0",
  "info": {
    "title": "Apps Api",
    "version": "auto"
  },
  "tags": [
    {
      "name": "Apps v2"
    }
  ],
  "definitions": {
    "App_Name": {
      "type": "string",
      "description": "Name of an app",
      "example": "AppName"
    },
    "App_Urls": {
      "type": "array",
      "description": "Urls of an app",
      "items": {
        "type": "string"
      },
      "example": [
        "http://example.com"
      ]
    },
    "App_Timezone": {
      "type": "string",
      "description": "Timezone for an app",
      "example": "UTC"
    },
    "App_Currency": {
      "type": "string",
      "description": "Currency for an app",
      "example": "USD"
    },
    "App_AddedAt": {
      "type": "string",
      "description": "When app was added",
      "example": "2018-07-10T08:50:41+00:00",
      "format": "date-time"
    },
    "JsonApi_Id": {
      "type": "string",
      "description": "Resource ID",
      "example": "985ed9d7-b652-47b8-b9cf-c17d62735261",
      "format": "uuid"
    },
    "JsonApi_Type": {
      "type": "string",
      "description": "Resource type, unique across whole PPMS",
      "example": "ppms/app"
    },
    "JsonApi_Resource_Object": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/JsonApi_Type"
        },
        "id": {
          "$ref": "#/definitions/JsonApi_Id"
        },
        "attributes": {
          "type": "object"
        }
      }
    },
    "EditApp_JsonApi": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "type": {
              "$ref": "#/definitions/JsonApi_Type"
            },
            "id": {
              "$ref": "#/definitions/JsonApi_Id"
            },
            "attributes": {
              "$ref": "#/definitions/App_Editable_Attributes"
            }
          }
        }
      }
    },
    "App_NewApp_JsonApi": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Resource type",
              "example": "ppms/app"
            },
            "attributes": {
              "type": "object",
              "required": [
                "name",
                "urls"
              ],
              "properties": {
                "name": {
                  "$ref": "#/definitions/App_Name"
                },
                "urls": {
                  "$ref": "#/definitions/App_Urls"
                },
                "timezone": {
                  "$ref": "#/definitions/App_Timezone"
                },
                "currency": {
                  "$ref": "#/definitions/App_Currency"
                }
              }
            }
          }
        }
      }
    },
    "App_Permissions_JsonApi": {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "total": {
              "type": "integer",
              "description": "Total count of objects",
              "example": 1
            }
          }
        },
        "data": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/definitions/JsonApi_Resource_Object"
            },
            {
              "properties": {
                "attributes": {
                  "type": "object",
                  "properties": {
                    "displayName": {
                      "description": "Display name",
                      "type": "string",
                      "example": "email@adress.com"
                    },
                    "access": {
                      "description": "Access list",
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "view"
                      ]
                    }
                  }
                }
              }
            }
          ]
        }
      }
    },
    "App_List_JsonApi": {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "total": {
              "type": "integer",
              "description": "Total count of objects",
              "example": 1
            }
          }
        },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "allOf": [
              {
                "$ref": "#/definitions/JsonApi_Resource_Object"
              },
              {
                "properties": {
                  "attributes": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "$ref": "#/definitions/App_Name"
                      },
                      "addedAt": {
                        "$ref": "#/definitions/App_AddedAt"
                      }
                    }
                  }
                }
              }
            ]
          }
        }
      }
    },
    "App_JsonApi": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/definitions/JsonApi_Resource_Object"
            },
            {
              "properties": {
                "attributes": {
                  "$ref": "#/definitions/App_Attributes"
                }
              }
            }
          ]
        }
      }
    },
    "App_Editable_Attributes": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/App_Name"
        },
        "urls": {
          "$ref": "#/definitions/App_Urls"
        },
        "timezone": {
          "$ref": "#/definitions/App_Timezone"
        },
        "currency": {
          "$ref": "#/definitions/App_Currency"
        },
        "excludeUnknownUrls": {
          "type": "boolean",
          "description": "Exclude unknown urls for an app",
          "example": true
        },
        "keepUrlFragment": {
          "type": "boolean",
          "description": "Keep url fragment for an app",
          "example": false
        },
        "eCommerceTracking": {
          "type": "boolean",
          "description": "eCommerceTracking for an app",
          "example": true
        },
        "siteSearchTracking": {
          "type": "boolean",
          "description": "Site search tracking for an app",
          "example": true
        },
        "siteSearchQueryParams": {
          "type": "array",
          "description": "Site search query params for an app",
          "items": {
            "type": "string"
          },
          "example": [
            "q",
            "query",
            "s",
            "search",
            "searchword",
            "keyword"
          ]
        },
        "siteSearchCategoryParams": {
          "type": "array",
          "description": "Site search category params for an app",
          "items": {
            "type": "string"
          },
          "example": []
        },
        "delay": {
          "type": "integer",
          "description": "Delay for an app",
          "example": 500
        },
        "excludedIps": {
          "type": "array",
          "description": "Excluded ips for an app",
          "items": {
            "type": "string"
          },
          "example": [
            "192.168.0.0",
            "172.16.0.0"
          ]
        },
        "excludedUrlParams": {
          "type": "array",
          "description": "Excluded url params for an app",
          "items": {
            "type": "string"
          },
          "example": [
            "pl_medium",
            "pk_source"
          ]
        },
        "excludedUserAgents": {
          "type": "array",
          "description": "Excluded user agents for an app",
          "items": {
            "type": "string"
          },
          "example": [
            "Mozilla/5.0 (Windows NT 6.1) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/41.0.2228.0",
            "Opera/9.80 (Windows NT 6.2; Win64; x64) Presto/2.12 Version/12.16"
          ]
        },
        "gdpr": {
          "type": "boolean",
          "description": "Gdpr enabled or disabled for an app",
          "example": true
        },
        "gdprUserModeEnabled": {
          "type": "boolean",
          "description": "Gdpr User Mode enabled or disabled for an app",
          "example": false
        },
        "privacyCookieDomainsEnabled": {
          "type": "boolean",
          "description": "Privacy cookie domains enabled or disabled for an app",
          "example": true
        },
        "privacyCookieExpirationPeriod": {
          "type": "integer",
          "description": "Privacy cookie expiration period (in seconds)",
          "example": 31536000
        },
        "privacyCookieDomains": {
          "type": "array",
          "description": "List of privacy cookie domains for an app (works if enabled)",
          "items": {
            "type": "string"
          },
          "example": [
            "*.example.com",
            "example.com"
          ]
        }
      }
    },
    "App_Attributes": {
      "type": "object",
      "allOf": [
        {
          "properties": {
            "addedAt": {
              "$ref": "#/definitions/App_AddedAt"
            }
          }
        },
        {
          "$ref": "#/definitions/App_Editable_Attributes"
        }
      ]
    }
  },
  "parameters": {
    "offset": {
      "name": "offset",
      "in": "query",
      "description": "Offset for pagination",
      "required": false,
      "type": "integer",
      "default": 0
    },
    "limit": {
      "name": "limit",
      "in": "query",
      "description": "Limit for pagination",
      "required": false,
      "type": "integer",
      "default": 1000
    },
    "search_query": {
      "name": "search_query",
      "in": "query",
      "description": "App search query",
      "required": false,
      "type": "string",
      "default": ""
    },
    "appId": {
      "name": "appId",
      "in": "path",
      "description": "App UUIDv4",
      "required": true,
      "type": "string"
    }
  },
  "paths": {
